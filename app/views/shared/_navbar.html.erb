<div class="navbar">
  <div class="navbar-wrap">
    <div class="logo">
      <% if action_name != "home" then %>
        <%= link_to root_path, class: 'logo-link' do %>
          <h1>AirTrip</h1>
        <% end %>
      <% else %>
        <h1>AirTrip</h1>
      <% end %>
    </div>
    <!-- navbar links -->
      <div class="links">
        <%= link_to 'App', '#' %>
        <%= link_to 'About', :about %>
        <%= link_to 'Contact', :contact %>
      </div>
    <!-- navbar links end -->
    <!-- dropdown links for small devices only -->
      <div class="btn-group">
        <i class="fa fa-bars" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
        <div class="dropdown-menu dropdown-menu-right">
          <%= link_to 'App', '#', class: 'dropdown-item' %>
          <%= link_to 'About', :about, class: 'dropdown-item' %>
          <%= link_to 'Contact', :contact, class: 'dropdown-item' %>
        </div>
      </div>
    <!-- dropdown links for small devices only -->
  </div>
</div>
